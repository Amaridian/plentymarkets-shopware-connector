<?xml version="1.0" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!-- Parameters -->

    <parameters>
        <parameter key="plentyconnector.adapter.shopware" type="constant">ShopwareAdapter\ShopwareAdapter::NAME</parameter>
        <parameter key="plentyconnector.adapter.plentymarkets" type="constant">PlentymarketsAdapter\PlentymarketsAdapter::NAME</parameter>

        <parameter key="plentyconnector.transfer_object.category" type="constant">PlentyConnector\Connector\TransferObject\Category\Category::TYPE</parameter>
        <parameter key="plentyconnector.transfer_object.country" type="constant">PlentyConnector\Connector\TransferObject\Country\Country::TYPE</parameter>
        <parameter key="plentyconnector.transfer_object.currency" type="constant">PlentyConnector\Connector\TransferObject\Currency\Currency::TYPE</parameter>
        <parameter key="plentyconnector.transfer_object.customer_group" type="constant">PlentyConnector\Connector\TransferObject\CustomerGroup\CustomerGroup::TYPE</parameter>
        <parameter key="plentyconnector.transfer_object.language" type="constant">PlentyConnector\Connector\TransferObject\Language\Language::TYPE</parameter>
        <parameter key="plentyconnector.transfer_object.manufacturer" type="constant">PlentyConnector\Connector\TransferObject\Manufacturer\Manufacturer::TYPE</parameter>
        <parameter key="plentyconnector.transfer_object.order_status" type="constant">PlentyConnector\Connector\TransferObject\OrderStatus\OrderStatus::TYPE</parameter>
        <parameter key="plentyconnector.transfer_object.payment_method" type="constant">PlentyConnector\Connector\TransferObject\PaymentMethod\PaymentMethod::TYPE</parameter>
        <parameter key="plentyconnector.transfer_object.payment_status" type="constant">PlentyConnector\Connector\TransferObject\PaymentStatus\PaymentStatus::TYPE</parameter>
        <parameter key="plentyconnector.transfer_object.product" type="constant">PlentyConnector\Connector\TransferObject\Product\Product::TYPE</parameter>
        <parameter key="plentyconnector.transfer_object.shipping_profile" type="constant">PlentyConnector\Connector\TransferObject\ShippingProfile\ShippingProfile::TYPE</parameter>
        <parameter key="plentyconnector.transfer_object.shop" type="constant">PlentyConnector\Connector\TransferObject\Shop\Shop::TYPE</parameter>
        <parameter key="plentyconnector.transfer_object.unit" type="constant">PlentyConnector\Connector\TransferObject\Unit\Unit::TYPE</parameter>
        <parameter key="plentyconnector.transfer_object.vat_rate" type="constant">PlentyConnector\Connector\TransferObject\VatRate\VatRate::TYPE</parameter>
    </parameters>

    <!-- Services -->

    <services>

        <!-- Logger -->

        <service id="plentyconnector.logger.handler" class="Monolog\Handler\RotatingFileHandler" public="false">
            <argument>%kernel.logs_dir%/plentyconnector_%kernel.environment%.log</argument>
            <argument>14</argument>
            <call method="pushProcessor">
                <argument type="service" id="monolog.processor.uid"/>
            </call>
        </service>

        <service id="plentyconnector.logger.psr3processor" class="Monolog\Processor\PsrLogMessageProcessor" public="false"/>

        <service id="plentyconnector.logger" class="Shopware\Components\Logger">
            <argument>plentyconnector</argument>

            <call method="pushHandler">
                <argument type="service" id="plentyconnector.logger.handler"/>
            </call>
            <call method="pushProcessor">
                <argument type="service" id="plentyconnector.logger.psr3processor"/>
            </call>
        </service>

        <!-- Config -->

        <service id="plentyconnector.config" class="PlentyConnector\Connector\ConfigService\ConfigService">
            <argument type="service" id="models"/>
        </service>

        <!-- Subscriber -->

        <service id="plentyconnector.subscriber.controller_path" class="PlentyConnector\Subscriber\ControllerPathSubscriber">
            <argument type="service" id="service_container" />

            <tag name="shopware.event_subscriber" />
        </service>

        <!-- Connector -->

        <service id="plentyconnector.connector" class="PlentyConnector\Connector\Connector">
            <argument type="service" id="plentyconnector.query_bus"/>
            <argument type="service" id="plentyconnector.command_bus"/>
            <argument type="service" id="plentyconnector.event_bus"/>
            <argument type="service" id="plentyconnector.query_factory"/>
            <argument type="service" id="plentyconnector.command_factory"/>
        </service>

        <!-- Connector definitions -->

        <service id="plentyconnector.connector_definition.category" class="PlentyConnector\Connector\TransferObject\Definition\Definition">
            <argument>%plentyconnector.adapter.plentymarkets%</argument>
            <argument>%plentyconnector.adapter.shopware%</argument>
            <argument>%plentyconnector.transfer_object.category%</argument>

            <tag name="plentyconnector.connector_definition"/>
        </service>

        <service id="plentyconnector.connector_definition.manufacturer" class="PlentyConnector\Connector\TransferObject\Definition\Definition">
            <argument>%plentyconnector.adapter.plentymarkets%</argument>
            <argument>%plentyconnector.adapter.shopware%</argument>
            <argument>%plentyconnector.transfer_object.manufacturer%</argument>

            <tag name="plentyconnector.connector_definition"/>
        </service>

        <!--
        <service id="plentyconnector.connector_definition.product" class="PlentyConnector\Connector\TransferObject\Definition\Definition">
            <argument>%plentyconnector.adapter.plentymarkets%</argument>
            <argument>%plentyconnector.adapter.shopware%</argument>
            <argument>%plentyconnector.transfer_object.product%</argument>

            <tag name="plentyconnector.connector_definition"/>
        </service>
        -->

        <!-- Cleanup Service -->

        <service id="plentyconnector.cleanup_service" class="PlentyConnector\Connector\CleanupService\CleanupService">
            <argument type="service" id="plentyconnector.query_bus"/>
            <argument type="service" id="plentyconnector.command_bus"/>
            <argument type="service" id="plentyconnector.query_factory"/>
            <argument type="service" id="plentyconnector.command_factory"/>
            <argument type="service" id="plentyconnector.identity_service"/>
        </service>

        <!-- Mapping Service -->

        <service id="plentyconnector.mapping_service" class="PlentyConnector\Connector\MappingService\MappingService">
            <argument type="service" id="plentyconnector.query_factory"/>
            <argument type="service" id="plentyconnector.query_bus"/>
        </service>

        <!-- Mapping definitions -->

        <service id="plentyconnector.mapping_definition.country" class="PlentyConnector\Connector\TransferObject\Definition\Definition">
            <argument>%plentyconnector.adapter.plentymarkets%</argument>
            <argument>%plentyconnector.adapter.shopware%</argument>
            <argument>%plentyconnector.transfer_object.country%</argument>

            <tag name="plentyconnector.mapping_definition"/>
        </service>

        <service id="plentyconnector.mapping_definition.currency" class="PlentyConnector\Connector\TransferObject\Definition\Definition">
            <argument>%plentyconnector.adapter.plentymarkets%</argument>
            <argument>%plentyconnector.adapter.shopware%</argument>
            <argument>%plentyconnector.transfer_object.currency%</argument>

            <tag name="plentyconnector.mapping_definition"/>
        </service>

        <service id="plentyconnector.mapping_definition.customer_group" class="PlentyConnector\Connector\TransferObject\Definition\Definition">
            <argument>%plentyconnector.adapter.plentymarkets%</argument>
            <argument>%plentyconnector.adapter.shopware%</argument>
            <argument>%plentyconnector.transfer_object.customer_group%</argument>

            <tag name="plentyconnector.mapping_definition"/>
        </service>

        <service id="plentyconnector.mapping_definition.language" class="PlentyConnector\Connector\TransferObject\Definition\Definition">
            <argument>%plentyconnector.adapter.plentymarkets%</argument>
            <argument>%plentyconnector.adapter.shopware%</argument>
            <argument>%plentyconnector.transfer_object.language%</argument>

            <tag name="plentyconnector.mapping_definition"/>
        </service>

        <service id="plentyconnector.mapping_definition.payment_method" class="PlentyConnector\Connector\TransferObject\Definition\Definition">
            <argument>%plentyconnector.adapter.plentymarkets%</argument>
            <argument>%plentyconnector.adapter.shopware%</argument>
            <argument>%plentyconnector.transfer_object.payment_method%</argument>

            <tag name="plentyconnector.mapping_definition"/>
        </service>

        <service id="plentyconnector.mapping_definition.shipping_profile" class="PlentyConnector\Connector\TransferObject\Definition\Definition">
            <argument>%plentyconnector.adapter.plentymarkets%</argument>
            <argument>%plentyconnector.adapter.shopware%</argument>
            <argument>%plentyconnector.transfer_object.shipping_profile%</argument>

            <tag name="plentyconnector.mapping_definition"/>
        </service>

        <service id="plentyconnector.mapping_definition.shop" class="PlentyConnector\Connector\TransferObject\Definition\Definition">
            <argument>%plentyconnector.adapter.plentymarkets%</argument>
            <argument>%plentyconnector.adapter.shopware%</argument>
            <argument>%plentyconnector.transfer_object.shop%</argument>

            <tag name="plentyconnector.mapping_definition"/>
        </service>

        <service id="plentyconnector.mapping_definition.payment_status" class="PlentyConnector\Connector\TransferObject\Definition\Definition">
            <argument>%plentyconnector.adapter.plentymarkets%</argument>
            <argument>%plentyconnector.adapter.shopware%</argument>
            <argument>%plentyconnector.transfer_object.payment_status%</argument>

            <tag name="plentyconnector.mapping_definition"/>
        </service>

        <service id="plentyconnector.mapping_definition.order_status" class="PlentyConnector\Connector\TransferObject\Definition\Definition">
            <argument>%plentyconnector.adapter.plentymarkets%</argument>
            <argument>%plentyconnector.adapter.shopware%</argument>
            <argument>%plentyconnector.transfer_object.order_status%</argument>

            <tag name="plentyconnector.mapping_definition"/>
        </service>

        <service id="plentyconnector.mapping_definition.unit" class="PlentyConnector\Connector\TransferObject\Definition\Definition">
            <argument>%plentyconnector.adapter.plentymarkets%</argument>
            <argument>%plentyconnector.adapter.shopware%</argument>
            <argument>%plentyconnector.transfer_object.unit%</argument>

            <tag name="plentyconnector.mapping_definition"/>
        </service>

        <service id="plentyconnector.mapping_definition.vat_rate" class="PlentyConnector\Connector\TransferObject\Definition\Definition">
            <argument>%plentyconnector.adapter.plentymarkets%</argument>
            <argument>%plentyconnector.adapter.shopware%</argument>
            <argument>%plentyconnector.transfer_object.vat_rate%</argument>

            <tag name="plentyconnector.mapping_definition"/>
        </service>

        <!-- Console -->

        <service id="plentyconnector.console.import_categories_command" class="PlentyConnector\Console\Command\ImportCategoriesCommand">
            <argument type="service" id="plentyconnector.connector"/>
            <argument type="service" id="plentyconnector.logger"/>

            <tag name="console.command"/>
        </service>

        <service id="plentyconnector.console.import_manufacturers_command" class="PlentyConnector\Console\Command\ImportManufacturersCommand">
            <argument type="service" id="plentyconnector.connector"/>
            <argument type="service" id="plentyconnector.logger"/>

            <tag name="console.command"/>
        </service>

        <service id="plentyconnector.console.test_command" class="PlentyConnector\Console\Command\TestCommand">
            <argument type="service" id="plentmarkets_adapter.client"/>

            <tag name="console.command"/>
        </service>

        <!-- Output Handler -->

        <service id="plentyconnector.console.output_handler" class="PlentyConnector\Console\OutputHandler\OutputHandler"/>

        <!-- Identity Service -->

        <service id="plentyconnector.identity_storage" class="PlentyConnector\Connector\IdentityService\Storage\DoctrineIdentityStorage">
            <argument type="service" id="models"/>
        </service>

        <service id="plentyconnector.identity_service" class="PlentyConnector\Connector\IdentityService\IdentityService">
            <argument type="service" id="plentyconnector.identity_storage"/>
        </service>

        <!-- Query Factory -->

        <service id="plentyconnector.query_factory" class="PlentyConnector\Connector\QueryBus\QueryFactory\QueryFactory"/>

        <!-- Query generator -->

        <service id="plentyconnector.query_generator.category" class="PlentyConnector\Connector\QueryBus\QueryGenerator\Category\CategoryQueryGenerator">
            <tag name="plentyconnector.query_generator" />
        </service>

        <service id="plentyconnector.query_generator.country" class="PlentyConnector\Connector\QueryBus\QueryGenerator\Country\CountryQueryGenerator">
            <tag name="plentyconnector.query_generator" />
        </service>

        <service id="plentyconnector.query_generator.currency" class="PlentyConnector\Connector\QueryBus\QueryGenerator\Currency\CurrencyQueryGenerator">
            <tag name="plentyconnector.query_generator" />
        </service>

        <service id="plentyconnector.query_generator.customer_group" class="PlentyConnector\Connector\QueryBus\QueryGenerator\CustomerGroup\CustomerGroupQueryGenerator">
            <tag name="plentyconnector.query_generator" />
        </service>

        <service id="plentyconnector.query_generator.language" class="PlentyConnector\Connector\QueryBus\QueryGenerator\Language\LanguageQueryGenerator">
            <tag name="plentyconnector.query_generator" />
        </service>

        <service id="plentyconnector.query_generator.manufacturer" class="PlentyConnector\Connector\QueryBus\QueryGenerator\Manufacturer\ManufacturerQueryGenerator">
            <tag name="plentyconnector.query_generator" />
        </service>

        <service id="plentyconnector.query_generator.order_status" class="PlentyConnector\Connector\QueryBus\QueryGenerator\OrderStatus\OrderStatusQueryGenerator">
            <tag name="plentyconnector.query_generator" />
        </service>

        <service id="plentyconnector.query_generator.payment_method" class="PlentyConnector\Connector\QueryBus\QueryGenerator\PaymentMethod\PaymentMethodQueryGenerator">
            <tag name="plentyconnector.query_generator" />
        </service>

        <service id="plentyconnector.query_generator.payment_status" class="PlentyConnector\Connector\QueryBus\QueryGenerator\PaymentStatus\PaymentStatusQueryGenerator">
            <tag name="plentyconnector.query_generator" />
        </service>

        <service id="plentyconnector.query_generator.shipping_profile" class="PlentyConnector\Connector\QueryBus\QueryGenerator\ShippingProfile\ShippingProfileQueryGenerator">
            <tag name="plentyconnector.query_generator" />
        </service>

        <service id="plentyconnector.query_generator.shop" class="PlentyConnector\Connector\QueryBus\QueryGenerator\Shop\ShopQueryGenerator">
            <tag name="plentyconnector.query_generator" />
        </service>

        <service id="plentyconnector.query_generator.unit" class="PlentyConnector\Connector\QueryBus\QueryGenerator\Unit\UnitQueryGenerator">
            <tag name="plentyconnector.query_generator" />
        </service>

        <service id="plentyconnector.query_generator.vat_rate" class="PlentyConnector\Connector\QueryBus\QueryGenerator\VatRate\VatRateQueryGenerator">
            <tag name="plentyconnector.query_generator" />
        </service>

        <!-- Command Factory -->

        <service id="plentyconnector.command_factory" class="PlentyConnector\Connector\CommandBus\CommandFactory\CommandFactory"/>

        <!-- Command generator -->

        <service id="plentyconnector.command_generator.manufacturer" class="PlentyConnector\Connector\CommandBus\CommandGenerator\Manufacturer\ManufacturerCommandGenerator">
            <tag name="plentyconnector.command_generator" />
        </service>

        <!-- Service Bus -->

        <service id="plentyconnector.command_bus.command_handler_middleware" class="PlentyConnector\Connector\CommandBus\CommandHandlerMiddleware\CommandHandlerMiddleware"/>
        <service id="plentyconnector.event_bus.event_handler_middleware" class="PlentyConnector\Connector\EventBus\EventHandlerMiddleware\EventHandlerMiddleware"/>
        <service id="plentyconnector.query_bus.query_handler_middleware" class="PlentyConnector\Connector\QueryBus\QueryHandlerMiddleware\QueryHandlerMiddleware"/>

        <service id="plentyconnector.service_bus.class_name_formatter" class="PlentyConnector\Connector\Logger\ClassNameFormatter"/>

        <service id="plentyconnector.service_bus.logger_middleware" class="League\Tactician\Logger\LoggerMiddleware">
            <argument type="service" id="plentyconnector.service_bus.class_name_formatter"/>
            <argument type="service" id="plentyconnector.logger"/>
        </service>

        <service id="plentyconnector.service_bus_factory" class="PlentyConnector\Connector\ServiceBus\ServiceBusFactory"/>

        <service id="plentyconnector.command_bus" class="PlentyConnector\Connector\ServiceBus\ServiceBus">
            <factory service="plentyconnector.service_bus_factory" method="factory"/>

            <argument type="service" id="plentyconnector.service_bus.logger_middleware"/>
            <argument type="service" id="plentyconnector.command_bus.command_handler_middleware"/>
        </service>

        <service id="plentyconnector.query_bus" class="PlentyConnector\Connector\ServiceBus\ServiceBus">
            <factory service="plentyconnector.service_bus_factory" method="factory"/>

            <argument type="service" id="plentyconnector.service_bus.logger_middleware"/>
            <argument type="service" id="plentyconnector.query_bus.query_handler_middleware"/>
        </service>

        <service id="plentyconnector.event_bus" class="PlentyConnector\Connector\ServiceBus\ServiceBus">
            <factory service="plentyconnector.service_bus_factory" method="factory"/>

            <argument type="service" id="plentyconnector.service_bus.logger_middleware"/>
            <argument type="service" id="plentyconnector.event_bus.event_handler_middleware"/>
        </service>
    </services>
</container>
